generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Subscriber {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())

  // Relations
  lists SubscriberOnList[] //  connects to join table
}

model SubscriberList {
  id        String   @id @default(uuid())
  name      String
  tenantId  String // from Auth Service (multi-tenant logic)
  createdAt DateTime @default(now())

  // Relations
  subscribers SubscriberOnList[] //  connects to join table
}

model SubscriberOnList {
  subscriberId     String
  subscriberListId String
  createdAt        DateTime @default(now())

  subscriber     Subscriber     @relation(fields: [subscriberId], references: [id])
  subscriberList SubscriberList @relation(fields: [subscriberListId], references: [id])

  @@id([subscriberId, subscriberListId]) //  composite primary key
}
